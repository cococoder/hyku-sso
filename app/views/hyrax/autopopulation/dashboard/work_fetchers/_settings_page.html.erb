<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <ul class="navbar navbar-default navbar-fixed-side">
        <li class="active"><a href="#previously-added-id" role="tab" data-toggle="tab"><%= t("hyrax.autopopulation.previously_added_id") %></a></li>

        <li><a href="#rejected-doi" role="tab" data-toggle="tab"><%= t("hyrax.autopopulation.rejected_doi") %></a></li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="tab-content">
        <div id="rejected-doi" class="tab-pane active">
          <div class="panel panel-default labels">
            <div class="panel-body">
              <p class="text-primary text-center"> <%= rejected_doi.count %> <%= t("hyrax.autopopulation.rejected_doi") %> </p>
              <%= rejected_doi.join(", ") %>
            </div>
          </div>
        </div>

        <div id="previously-added-id" class="tab-pane active">
          <div class="panel panel-default labels">
            <div class="panel-body">
              <p class="text-primary text-center"> <%= saved_orcids.count %> <%= t("hyrax.autopopulation.saved_orcids") %> </p>
              <%= saved_orcids.join(", ") %>
            </div>

            <div class="panel-body">
              <p class="text-primary text-center"> <%= saved_doi.count %> <%= t("hyrax.autopopulation.saved_doi") %> </p>
              <%= saved_doi.join(", ") %>
            </div>

          </div>
        </div>
       </div> <!-- .tab-content -->
    </div>
  </div>
</div>
